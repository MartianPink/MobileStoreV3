@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right me-auto mb-2 mb-lg-2">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right me-auto mb-2 mb-lg-2">
        <li>
            <a class="nav-link" href="https://localhost:44372/Account/Register">
                Create Account
            </a>
        </li>
        <li>
            <a class="nav-link" href="https://localhost:44372/Account/Login">
                Login
            </a>
        </li>
    </ul>
}


